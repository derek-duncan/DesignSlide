@font-face {
    font-family: "Calendas";
    src: url('<%= asset_path('Calendas_Plus.ttf') %>');
    font-weight:400;
}
section.page-content {
	text-align: center;
	width: 80%;
	margin-left: 10%;
}
h2.title {
	font: 700 2.5em 'Calendas';
	margin-bottom: 1%;
}
img.uploaded {
	width: 100%;
	margin: 4% 0;
}
div.content p {
	text-align: justify;
	font: 500 1.4em/1.5em "Calendas";
	width: 95%;
	margin-left: 2.5%;
	-webkit-font-smoothing: antialiased;
	font-smoothing: antialiased;
}
div.author {
	position: relative;
	width: 84%; 
	margin-left: 5%;
	padding: 1% 3%;
	background: #f2f2f2;
	font-size: 1em;
	z-index: 10;
	// border-radius: 20px;
}